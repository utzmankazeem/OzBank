<!DOCTYPE html>
<html>
    <head>
        <title>Online Bank</title>
        <style type="text/css">
            body{
                background-color: rgb(98, 94, 100);
                font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            }
            a{
                text-decoration: none;
                letter-spacing: 1px;
            }
            a:hover{
                background-color:blanchedalmond;
                border: 2px salmon;
            }
            section{
                border: 5px solid #583344;
                width: 50%;
                height: 500px;
                position: relative;
                text-align: center;
                font-size: 15px;
                margin: 5% auto;
                color: burlywood;
            }

        </style>
    </head>
    <body>
            
        <section>
            <p>Banker_email: <strong> <%- a_email %> </strong> </p>
            <p>User: <strong> <%- a_id %> </strong></p>

            <h1>Admin: <i> <%- a_name %> </i></h1>
            <a href="/dashboard">home</a>
            <a href="/addcustomer">addcustomer</a>
            <a href="/viewcustomer">viewcustomer</a>
            <a href="/logout">logout</a>
            <hr>
            
            <h2>MyBankApp</h2>
            <h4>View customer</h4>
            
            <% if(success != 'undefined') { %>
                <p style="color:seashell"> <%- success %> </p>
            <% } %>
                
            <% if(er_msg != 'undefined'){ %>
                <p style="color: red"> <%= er_msg %> </p>
            <% } %>

           <table border="1" align="center">
               <tr>
                   <td>Name</td>
                   <td>Mobile</td>
                   <td>Email</td>
                   <td>Gender</td>
                   <td>Details</td>
               </tr>
               <tr>
                   <% customers.forEach(function(customer){%>
                        <td> <%-customer.fname + "-" + customer.lname %> </td>
                        <td> <%-customer.mobile %> </td>
                        <td> <%-customer.email %> </td>
                        <td> <%-customer.sex %> </td>
                        <td> <a href="/details/<%-customer._id%>">more details</a> </td>
               </tr>
               <%})%>
           </table>
        </section>
            
    </body>
</html>