 <% title= 'Bank'%>
 <%-include('layout/cusHeader')%>
            <main>
                <aside>
                    <% if(success != 'undefined') { %>
                        <p style="color: #fff"> <%- success %> </p>
                        <% } %>
                        
                        <% if(errMsg != 'undefined'){ %>
                        <p style="color: red"> <%= errMsg %> </p>
                        <% } %>
                    <% if (customer.passport && customer.passport.data) { %>
                        <img src="data:<%=customer.passport.contentType%>;base64,<%= customer.passport.data.toString('base64') %>" alt="profile" width="200" height="200" />
                    <% } else { %>
                        <img src="/path/to/default/image.png" alt="profile" width="200" height="200" />
                    <% } %>
                </aside>
                <article>
                <h2>Customer Details</h2>
                    <p><%- customer.fname + " - " + customer.lname %></p>
                    <p>BVN: <%- customer.bvn%></p>    
                    <p>Acc Number: <%- customer.accNum%></p>
                    <p>Acc Type: <%- customer.accType %></p>
                    <p>Acc Ball: <%- customer.cbal %></p>
                </article>
            </main>
<%-include('layout/cusFoot')%>